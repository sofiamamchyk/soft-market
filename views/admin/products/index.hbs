{{#> admin}}
  {{#*inline "content"}}
    <div class="card mb-4">
      <div class="card-header">
        Створити продукт
      </div>
      <div class="card-body">
        {{#if flashErrors}}
          {{#each flashErrors}}
            <p class="alert alert-danger">{{this}}</p>
          {{/each}}
        {{/if}}
        <form method="POST" action="/admin/products/store"enctype="multipart/form-data">
          <div class="row">
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Назва:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input name="name" type="text" class="form-control" required>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Ціна:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <div class="input-group">
                    <input name="price" type="text" class="form-control" required>
                    <span class="input-group-text">грн.</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Зображення:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input class="form-control" type="file" name="image">
                </div>
              </div>
            </div>
            <div class="col">
              &nbsp;
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Опис</label>
            <textarea class="form-control" name="description" rows="10" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        Керувати продуктами
      </div>
      <div class="card-body">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Назва</th>
              <th scope="col">Редагувати</th>
              <th scope="col">Видалити</th>
            </tr>
          </thead>
          <tbody>
            {{#each viewData.products}}
            <tr>
              <td>{{getId}}</td>
              <td>{{getName}}</td>
              <td>
                <a class="btn btn-primary" href="/admin/products/{{getId}}">
                  <i class="bi-pencil"></i>
                </a>
              </td>
              <td>
                <form action="/admin/products/{{getId}}" method="POST">
                  <button class="btn btn-danger">
                    <i class="bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{/inline}}
{{/admin}}
