{{#> admin}}
  {{#*inline "content"}}
    <div class="card mb-4">
      <div class="card-header">
        Редагувати продукт
      </div>
      <div class="card-body">
        {{#if flashErrors}}
          {{#each flashErrors}}
            <p class="alert alert-danger">{{this}}</p>
          {{/each}}
        {{/if}}
        {{#with viewData.product}}
        <form method="POST" action="/admin/products/{{getId}}/update" enctype="multipart/form-data">
          <div class="row">
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Назва:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input name="name" value="{{getName}}" type="text" class="form-control" required>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Ціна:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <div class="input-group">
                    <input name="price" value="{{getPrice}}" type="text" class="form-control" required>
                    <span class="input-group-text">грн.</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Зображення:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input class="form-control" type="file" name="image">
                </div>
              </div>
            </div>
            <div class="col">
              &nbsp;
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Опис</label>
            <textarea class="form-control" name="description" rows="10" required>{{{formatTextareaContent description}}}</textarea>
          </div>
          <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
        {{/with}}
      </div>
    </div>
  {{/inline}}
{{/admin}}
