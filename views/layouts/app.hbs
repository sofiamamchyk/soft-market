<!doctype html>
<html lang="en">
<head>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
  <link href="/css/app.css" rel="stylesheet" />
  <title>{{#if viewData.title}}{{ viewData.title }}{{else}}Soft Market{{/if}}</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
</head>
<body>
  <!-- header -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-secondary py-4 fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">
        <span class="part1">SOFT</span>
        <span class="part2">MARKET</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav ms-auto">
          <form class="mb-3 mb-lg-0 me-lg-3" style="min-width: 28vw;">
            <input id="search-input" type="search" class="form-control form-control-dark" placeholder="Пошук..." aria-label="Search" value="{{viewData.search}}">
          </form>
          <a class="nav-link active" href="/categories">Продукти</a>
          <a class="nav-link active" href="/about">Про нас</a>
          <div class="vr bg-white mx-2 d-none d-lg-block"></div>
          {{#if session.user}}
          <li class="nav-item dropdown">
            <a class="nav-link active icon-link dropdown-toggle" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="icon bi bi-person"></i>
              {{!-- {{session.user.name}} --}}
              Мій кабінет
            </a>
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdown01" style="min-width: 280px;">
              <li>
                <a class="dropdown-item d-flex gap-2 align-items-center" href="/account/orders">
                  <i class="icon bi bi-bag"></i>
                  Мої замовлення
                </a>
              </li>
              {{#ifCond session.user.role 'admin'}}
                <li><hr class="dropdown-divider"></li>
                <li>
                  <a class="dropdown-item d-flex gap-2 align-items-center" href="/admin/products">
                    <i class="icon bi bi-speedometer2"></i>
                    Адмін панель
                  </a>
                </li>
              {{/ifCond}}
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item d-flex gap-2 align-items-center" href="/auth/logout">
                  <i class="icon bi bi-box-arrow-right"></i>
                  Вихід
                </a>
              </li>
            </ul>
          </li>
          {{else}}
          {{!-- <a class="nav-link icon-link active" href="/auth/login">
            <i class="icon bi bi-person"></i>
            Увійти
          </a> --}}
          <li class="nav-item dropdown">
            <a class="nav-link active icon-link dropdown-toggle" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="icon bi bi-person"></i>
              Увійти
            </a>
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdown01" style="min-width: 280px;">
              <li>
                <a class="dropdown-item d-flex gap-2 align-items-center" href="/auth/login">
                  <i class="icon bi bi-box-arrow-in-right"></i>
                  Вхід
                </a>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item d-flex gap-2 align-items-center" href="/auth/register">
                  <i class="icon bi bi-person-plus"></i>
                  Реєстрація
                </a>
              </li>
            </ul>
          </li>

          {{/if}}
          <div class="vr bg-white mx-2 d-none d-lg-block"></div>
          <a class="nav-link icon-link active" href="/cart">
            <span class="cart-container position-relative">
              <i class="icon bi-cart"></i>
              <span id="cart-count" class="cart-count position-absolute badge rounded-pill {{#unless session.products}}hidden{{/unless}}">
                {{cartCount session.products}}
              </span>
            </span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <header class="masthead">
    <div class="container">
      {{#if viewData.breadcrumbs}}
      <nav aria-label="breadcrumb" style="padding-top: 24px;">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Головна</a></li>
          {{#each viewData.breadcrumbs}}
            <li class="breadcrumb-item {{#if @last}}active{{/if}}">{{#if @last}}{{name}}{{else}}<a href="{{link}}">{{name}}</a>{{/if}}</li>
          {{/each}}
        </ol>
      </nav>
      {{/if}}
      {{#if viewData.subtitle}}<h2 style="padding: 8px 0;">{{ viewData.subtitle }}</h2>{{/if}}</h2>
    </div>
  </header>
  <!-- header -->

  <div class="container my-4">
    {{> content}}
  </div>

  <!-- footer -->
  {{!-- <div class="copyright py-4 text-center text-white">
    <div class="container">
      <small>
        Copyright
      </small>
    </div>
  </div> --}}
  <!-- footer -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="/js/app.js"></script>
</body>
</html>