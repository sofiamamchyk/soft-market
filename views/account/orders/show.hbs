{{#> app}}
  {{#*inline "content"}}
    <div class="cart checkout row mb-5">
        <div class="col-md-8">
            <ul class="cart-list list-group">
                {{#each viewData.order.items}}
                    <li class="list-group-item">
                        <div class="cart-item row align-items-center">
                            <div class="col-md-2">
                                <a class="product-name" href="/products/{{product.id}}">
                                    <img class="product-img" src="/uploads/{{product.image}}" />
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a class="product-name" href="/products/{{product.id}}">{{product.name}}</a>
                            </div>
                            <div class="col-md-2 px-0">
                                <p class="quantity">
                                {{quantity}} <span>шт.</span>
                                </p>
                            </div>
                            <div class="col-md-2">
                                <div class="product-price">
                                    <span class="product-price__value">{{getPrice}}</span>
                                    <span class="product-price__currency">грн</span>
                                </div>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            {{#with viewData.order}}
            <div class="card order-info">
                <div class="card-body">
                    <div class="mb-3">
                        <label>Статус замовлення</label>
                        <span class="order-status order-status--{{status}} badge">{{orderStatus status}}</span>
                    </div>
                    <div class="mb-3">
                        <label>Дата замовлення</label>
                        <p>{{getDate}}</p>
                    </div>
                    <hr>
                    <h6 class="mb-3">Контактні дані</h6>
                    {{#if getContactPhone}}
                        <div class="mb-3">
                            <label>Телефон</label>
                            <p>{{getContactPhone}}</p>
                        </div>
                    {{/if}}
                    <div class="mb-3">
                        <label>Ім'я</label>
                        <p>{{getContactName}}</p>
                    </div>
                    <div class="mb-3">
                        <label>Ел. пошта</label>
                        <p>{{getContactEmail}}</p>
                    </div>
                    <hr>
                    <h6 class="mb-3">Доставка і оплата</h6>
                    <div class="mb-3">
                        <label>Доставка</label>
                        <p>{{deliveryType deliveryType}}</p>
                    </div>
                    <div class="mb-3">
                        <label>Спосіб оплати</label>
                        <p>{{paymentType paymentType}}</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <label>Сума замовлення: </label>
                        <div class="product-price">
                            <span class="product-price__value">{{getTotal}}</span>
                            <span class="product-price__currency">грн</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </div>
  {{/inline}}
{{/app}}
