{{#> app}}
  {{#*inline "content"}}
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <h2 class="text-center pt-4">Реєстрація</h2>
            <div class="card-body py-5 px-5 pt-4">
              {{#if flashErrors}}
                {{#each flashErrors}}
                  <p class="alert alert-danger">{{this}}</p>
                {{/each}}
              {{/if}}
              <form method="POST" action="/auth/store">
                <div class="mb-3">
                  <label for="name" class="form-label">Ім'я</label>
                  <input id="name" type="text" class="form-control" name="name"/>
                </div>

                <div class="mb-3">
                  <label for="email" class="form-label">Ел. пошта</label>
                  <input id="email" type="email" class="form-control" name="email" />
                </div>

                <div class="mb-4">
                  <label for="password" class="form-label">Пароль</label>
                  <input id="password" type="password" class="form-control" name="password" />
                </div>

                <button type="submit" class="auth-btn btn bg-primary text-white">Створити аккаунт</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/inline}}
{{/app}}
