{{#> app}}
  {{#*inline "content"}}
    {{#with viewData.product}}
    <div class="product-info card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="/uploads/{{getImage}}" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-title">
              {{getName}}
            </h3>
            <p class="card-text">{{{formatLineBreaks description}}}</p>
            <div class="product-info__buy">
              <div class="product-price">
                <span class="product-price__value">{{getPrice}}</span>
                <span class="product-price__currency">грн</span>
              </div>

              <form method="POST" action="/cart/add/{{getId}}">
                <div class="row">
                  <div class="col-auto">
                    <div class="input-group col-auto">
                      <div class="input-group-text">Кількість</div>
                      <input type="number" min="1" max="10" class="form-control quantity-input" name="quantity" value="1">
                    </div>
                  </div>
                  <div class="col-auto">
                    <button class="buy-btn btn bg-primary text-white" type="submit"><i class="bi bi-cart"></i>У кошик</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/with}}
  {{/inline}}
{{/app}}
